<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="250.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.virginia.sde.reviews.CreateUserController">
   <children>
      <VBox layoutX="20.0" layoutY="20.0" prefHeight="45.0" prefWidth="200.0">
        <children>
             <Button mnemonicParsing="false" onAction="#handleBackButton" text="Back to Login" />
        </children>
      </VBox>
      <GridPane layoutX="100.0" layoutY="80.0">
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
          <children>
              <Label text="New Username" GridPane.columnIndex="0" GridPane.rowIndex="0" />
              <TextField fx:id="username" prefHeight="26.0" prefWidth="34.0" text="" GridPane.columnIndex="1" GridPane.rowIndex="0" />
              <Label text="New Password" GridPane.columnIndex="0" GridPane.rowIndex="1" />
              <TextField fx:id="password" text="" GridPane.columnIndex="1" GridPane.rowIndex="1" />
          </children>
      </GridPane>
      <VBox layoutX="190.0" layoutY="150.0" prefHeight="45.0" prefWidth="200.0">
        <children>
            <Button mnemonicParsing="false" onAction="#handleCreateAccountButton" text="Create New User" />
        </children>
       </VBox>
      <Label fx:id="createAccountLabel" layoutX = "180.0" layoutY = "180.0"/>
   </children>
</AnchorPane>
